
  <div class="containar">
    <div class="row">
      <div class="col-lg-3">
        <%= render 'books/list', user: @book.user %>
        <%= render 'books/post', bookn: @bookn %>
      </div>
      <div class="col-lg-9">
          <h2>Book detail</h2>
          <table class="table table-hover">
            <tbody>
              <tr>
                <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no2_image.jpg" %>
                  <%=link_to @book.user.name,user_path(@user.id)%>
                </td>
                <td><%=@book.title%></td>
                <td><%=@book.body%></td>
              <% if @book.user == current_user %>
                <td>
                  <button type="button" class="btn btn-success btn-sm">
                  <%= link_to "edit", edit_book_path(@book.id)%>
                  </button>
                </td>
                <td>
                  <button type="button" class="btn btn-danger btn-sm">
                    <%= link_to "destroy",book_path(@book.id), method: :delete %>
                  </button>
                </td>
              <% end %>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>
