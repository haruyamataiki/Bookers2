
<body>
  <div class="containar">
   <!--  <p id="notice"><%=  notice %></p> -->
    <div class="row">
      <div class="col-lg-3">

        <%= render 'books/list', user:@user %>
        <%= render 'books/post', bookn:@bookn %>
      </div>
      <div class="col-lg-9">
          <h2>Books</h2>
          <table class="table table-hover">
            <tbody>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no2_image.jpg" %></td>
                <td><%=link_to book.title, book_path(book.id)%></td>
                <td><%=book.body%></td>
              </tr>
             <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>

</body>

